package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_binary_host {
    name: "xsdc",
    srcs: [
        "src/main/java/**/*.java",
    ],
    static_libs: [
        "commons-cli-1.2",
    ],
    manifest: "MANIFEST.MF"
}

java_test_host {
    name: "xsdc-unittest",
    srcs: [
        "src/test/java/**/*.java",
        "src/test/kotlin/**/*.kt",
    ],
    static_libs: [
        "commons-cli-1.2",
        "kotlin-test",
        "junit",
        "xsdc",
    ],
}
